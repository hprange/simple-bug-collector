<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemalocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    <persistence-unit name="simple-bug-collector-db" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.example.domain.MyEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver">
                <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres/">
                    <property name="hibernate.connection.username" value="myapp">
                        <property name="hibernate.connection.password" value="myapp">
                            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect">
                                <!-- Default is false for backwards compatibility. Should be used on all new projects -->
                                <property name="hibernate.id.new_generator_mappings" value="true">
                                </property>
                            </property>
                        </property>
                    </property>
                </property>
            </property>
        </properties>
    </persistence-unit>
</persistence>